{
  "kind": "collectionType",
  "collectionName": "case_studies",
  "info": {
    "singularName": "case-study",
    "pluralName": "case-studies",
    "displayName": "Case Study",
    "description": "Portfolio case studies"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "client": {
      "type": "string",
      "required": true
    },
    "industry": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "challenge": {
      "type": "richtext"
    },
    "solution": {
      "type": "richtext"
    },
    "results": {
      "type": "richtext"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "websiteUrl": {
      "type": "string"
    },
    "completedAt": {
      "type": "date"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    }
  }
}
